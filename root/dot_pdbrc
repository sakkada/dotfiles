# https://docs.python.org/3/library/pdb.html#debugger-commands
# Rc file may be located in ~/.pdbrc or ./.pdbrc.

# shortcut for alias
alias al alias

# print a dictionary, sorted by keys, %1 is dict, %2 is name prefix
alias pd for k in sorted(%1.keys()): print(f"%2{k.ljust(max(len(s) for s in %1.keys())+1)} = {%1[k]}")
# print via pd object internal __dict__
alias po pd %1.__dict__ %1:
# print via po self value
alias ps po self
# print via pd locals() variables
alias pl pd locals() local:
alias pg pd globals() global:

# rich lib aliases
alias rp  import rich; rich.print(%*)
alias rps rp self
alias rpl rp locals()
alias rpg rp globals()

# combine next and step with list commands
alias nn n;;l
alias ss s;;l

# asyncio support in pdb/ipdb, required nest-asyncio
alias apatch import nest_asyncio; nest_asyncio.apply()
alias aw     asyncio.run(%*)
